PREFIX  :     <http://ece.neu.edu/ontologies/DeviceDescription3000.owl#>
PREFIX  saref: <https://w3id.org/saref#>

SELECT DISTINCT  ?SmokeSensor_0
WHERE
  { ?SmokeSensor_0
              a                     saref:SmokeSensor
    { ?Light_0  saref:controlsProperty  ?SmokeSensor_0
      { ?Light_0  a                     saref:Light
        { ?Appliance_0  saref:isMeasuredByDevice  ?Light_0
          { ?Appliance_0  a                 saref:Appliance }
        }
      }
    }
  }
